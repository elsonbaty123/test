{
  "watch": ["server.ts", "src"],
  "ext": "ts,tsx,js,jsx",
  "ignore": [
    "node_modules",
    ".next",
    ".git",
    "*.log",
    "dist",
    "build",
    "coverage",
    "*.test.*",
    "*.spec.*"
  ],
  "exec": "npx tsx server.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": true
}
